<center>
<% @family_members.each do |r| %> 
<% @relationship = Relation.find(r.relation_id).relationship %>
<table>
  <tr>
    <td>Do you want to add
      <% if r.user.photo_file_name.nil? %>
       <img src="/assets/empty_profile.jpeg" width="80" alt="" class='img-circle'/>
      <% else %>
      <%= image_tag r.user.photo.url(:small), :class => 'img-circle' %>
      <% end %>
    </td>
    <td>
      <a href="/family_members/family/<%= r.user.id %>"><%= r.user.firstname.capitalize %></a> &nbsp;as your
      <%= @relationship %>
      <a href="/family_members/add_family/<%= r.id %>" class="btn btn-info" >Accept</a>
      <a href="/family_members/pending_decline/<%= r.id %>" class="btn btn-info">Decline</a>
    </td>
  </tr>
</table>
<% end %> 


<% @send_notification.each do |sn| %> 
  <% unless sn.relationship.nil? %>
    <table><tr><td>
    <% @u = User.find(sn.new_member_id).firstname %>  
    <% @u_id = User.find(sn.new_member_id) %>
     <% if @u_id.photo_file_name.nil? %>
      <img src="/assets/empty_profile.jpeg" width="80" alt="" />
     <% else %>
      <%= image_tag @u_id.photo.url(:small) %>
     <% end %>
    </td><td>
    <%= sn.relationship %>  
    <a href="/family_members/accept/<%= sn.id %>">yes</a> | <a href="/family_members/decline/<%= sn.id %>">no</a>
   </td></tr>
   <tr><td>
   <a href="/family_members/family/<%= @u_id.id %>"><%= @u%></td>
  </tr></table>
 <% end %> 
<% end %>



<% @accept_notification.each do |an| %> 
 <% unless an.relationship.nil? %>
  <table><tr><td>
  <% @u = User.find(an.existing_member_id).firstname %> 
  <% @u_id = User.find(an.existing_member_id) %>
  <% if @u_id.photo_file_name.nil? %>
   <img src="/assets/empty_profile.jpeg" width="80" alt="" />
  <% else %>
   <%= image_tag @u_id.photo.url(:small) %>
  <% end %>
  </td><td><%= an.reverse_relationship %> ?
  <a href="/family_members/flag_accept/<%= an.id %>">yes</a> | <a href="/family_members/flag_decline/<%= an.id %>">no</a>
  </td></tr>
  <tr><td><a href="/family_members/family/<%= @u_id.id %>"><%= @u%></td>
  </tr>
  </table>
 <% end %> 
<% end %>
</center>